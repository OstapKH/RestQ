<?xml version="1.0" encoding="UTF-8"?>
<benchmark-config>
  <pauseBetweenExperiments-ms>10000</pauseBetweenExperiments-ms>

  <endpoints>
    <endpoint name="new-order">
      <!-- Payloads for this would be generated by the benchmark client -->
      <url>/new-order</url>
    </endpoint>
    <endpoint name="payment">
      <url>/payment</url>
    </endpoint>
    <endpoint name="order-status">
      <url>/order-status</url>
    </endpoint>
    <endpoint name="delivery">
      <url>/delivery</url>
    </endpoint>
    <endpoint name="stock-level">
      <url>/stock-level</url>
    </endpoint>
  </endpoints>

  <experiment>
    <experiment_name>TPCC_Standard_Mix_Warmup</experiment_name>
    <runs>1</runs>
    <pause-between-runs-ms>5000</pause-between-runs-ms>
    <connections>10</connections>
    <requests-per-second>50</requests-per-second>
    <duration-seconds>60</duration-seconds>
    
    <probabilities>
      <probability endpoint="new-order">0.45</probability>
      <probability endpoint="payment">0.43</probability>
      <probability endpoint="order-status">0.04</probability>
      <probability endpoint="delivery">0.04</probability>
      <probability endpoint="stock-level">0.04</probability>
    </probabilities>
  </experiment>

  <experiment>
    <experiment_name>TPCC_Standard_Mix_Load</experiment_name>
    <runs>3</runs>
    <pause-between-runs-ms>5000</pause-between-runs-ms>
    <connections>10</connections>
    <requests-per-second>100</requests-per-second>
    <duration-seconds>120</duration-seconds>
    
    <probabilities>
      <probability endpoint="new-order">0.45</probability>
      <probability endpoint="payment">0.43</probability>
      <probability endpoint="order-status">0.04</probability>
      <probability endpoint="delivery">0.04</probability>
      <probability endpoint="stock-level">0.04</probability>
    </probabilities>
  </experiment>

</benchmark-config>
